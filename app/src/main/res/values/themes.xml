<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AN02ONL_PlannerApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/redFox</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/redDarker</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
        <item name="android:datePickerDialogTheme">@color/redFox</item>
    </style>

    <style name="DialogTheme" parent="Theme.AN02ONL_PlannerApp">
        <item name="colorAccent">@color/redFox</item>
    </style>

    <style name="EditTextFox">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/rounded_edittext_white</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center</item>
        <item name="colorAccent">@color/redFox</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>